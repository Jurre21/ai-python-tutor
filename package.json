{
  "name": "ai-python-tutor",
  "displayName": "AI Python Tutor",
  "publisher": "jurre21",
  "description": "AI Python Tutor with AnythingLLM Backend",
  "version": "0.0.1",
  "main": "./out/extension.js",
  "engines": {
    "vscode": "^1.106.0"
  },
  "categories": [
    "Other"
  ],

"activationEvents": [
    "*",                          
    "onView:ai-tutor.chatView",
    "onCommand:ai-tutor.explainSelection"
],

  "contributes": {
    "viewsContainers": {
      "activitybar": [
        {
          "id": "ai-tutor-sidebar",
          "title": "AI Tutor",
          "icon": "media/logo.svg"
        }
      ]
    },
    "views": {
      "ai-tutor-sidebar": [
        {
          "id": "ai-tutor.chatView",
          "name": "AI Python Tutor",
          "icon": "media/logo.svg"
        }
      ]
    },
    "commands": [
      {
        "command": "ai-tutor.explainSelection",
        "title": "AI Tutor: Explain Selection"
      },
      {
        "command": "ai-tutor.generateQuiz",
        "title": "AI Tutor: Generate Quiz"
      },
      {
        "command": "ai-tutor.runAndDebug",
        "title": "AI Tutor: Run & Debug"
      },
      {
        "command": "ai-tutor.askBackend",
        "title": "AI Tutor: Ask Backend"
      },
      {
        "command": "ai-tutor.testBackend",
        "title": "AI Tutor: Test Backend Connection"
      }  
    ],
    "menus": {
      "editor/context": [
        {
          "command": "ai-tutor.explainSelection",
          "when": "editorHasSelection"
        },
        {
          "command": "ai-tutor.generateQuiz",
          "when": "editorHasSelection"
        }
      ]
    }
  },

  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src",
    "test": "vscode-test"
  },
  "devDependencies": {
    "@types/vscode": "^1.106.1",
    "@types/mocha": "^10.0.10",
    "@types/node": "22.x",
    "typescript-eslint": "^8.46.3",
    "eslint": "^9.39.1",
    "typescript": "^5.9.3",
    "@vscode/test-cli": "^0.0.12",
    "@vscode/test-electron": "^2.5.2"
  }
}